@model Message
@{ 
    ViewBag.Title = "Send Message";
    Layout = null; 
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MessageID" />
    <div class="form-group">
        <input type="hidden" value=@User?.Identity?.Name asp-for="Sender" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Content">Message</label>
        <div><span asp-validation-for="Content" class="text-danger"></span></div>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Send</button>
    </div>
</form>